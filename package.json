{
  "name": "toolbox",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "aws-creds": "bun run --cwd packages/aws-creds start",
    "ec2-ssm": "bun run --cwd packages/ec2-ssm start",
    "secrets-view": "bun run --cwd packages/secrets-view start",
    "proc-manager": "bun run --cwd packages/proc-manager start",
    "build": "bun run build:aws-creds && bun run build:ec2-ssm && bun run build:secrets-view && bun run build:proc-manager",
    "build:aws-creds": "bun run --cwd packages/aws-creds build",
    "build:ec2-ssm": "bun run --cwd packages/ec2-ssm build",
    "build:secrets-view": "bun run --cwd packages/secrets-view build",
    "build:proc-manager": "bun run --cwd packages/proc-manager build",
    "lint": "eslint packages/*/src",
    "changeset": "changeset",
    "version": "changeset version",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/js": "^9.0.0",
    "@types/react": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "bun-types": "latest",
    "eslint": "^9.0.0",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "husky": "^9.1.7",
    "react-devtools-core": "^7.0.1"
  }
}
